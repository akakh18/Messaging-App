<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/chat_item_length"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/chat_message_padding"
    android:paddingTop="@dimen/chat_message_padding"
    android:layout_gravity="right"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded">
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <TextView
        android:id="@+id/chat_message_sender_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/chat_message_time_height"
        android:layout_marginRight="@dimen/chat_message_padding"
        android:gravity="center"
        android:layout_gravity="center_vertical"/>
    <TextView
        android:id="@+id/chat_message_sender_text"
        android:layout_width="@dimen/chat_message_text_width"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/chat_message_text_padding"
        android:paddingTop="@dimen/chat_message_text_padding"
        android:layout_marginRight="@dimen/chat_message_right_padding"
        android:background="@drawable/sent_message"
        android:gravity="center"
        android:textAlignment="viewStart"
        android:layout_gravity="center_vertical"
        tools:ignore="RtlCompat" />

</LinearLayout>